            <fragment
                android:paddingTop="10dp"
                android:id="@+id/place_autocomplete_fragment"
                android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="13dp"
                android:textColor="@color/textColorAccent"
                android:textColorHint="@color/textColorAccent" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_side"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="@dimen/padding_side"
            android:fontFamily="@font/mm"
            android:text="Payment Method"
            android:textColor="@color/textColorPrimaryDark"
            android:textSize="15sp" />

        <RadioGroup
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RadioButton
                android:buttonTint="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:textColor="@color/textColorAccent"
                android:layout_marginStart="11dp"
                android:layout_marginEnd="11dp"
                android:fontFamily="@font/mr"
                android:text="Cash On Delivery (COD)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioButton
                android:buttonTint="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:textColor="@color/textColorAccent"
                android:layout_marginStart="11dp"
                android:layout_marginEnd="11dp"
                android:fontFamily="@font/mr"
                android:text="PayPal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_side"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="@dimen/padding_side"
            android:fontFamily="@font/mm"
            android:text="Delivery Notes"
            android:textColor="@color/textColorPrimaryDark"
            android:textSize="15sp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false">

            <EditText
                android:id="@+id/check_out_delivery_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="13dp"
                android:fontFamily="@font/mr"
                android:hint="Insert delivery notes"
                android:inputType="text"
                android:textColor="@color/textColorAccent"
                android:textColorHint="@color/textColorAccent"
                android:textSize="15sp" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/button_check_out"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/padding_side"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="@dimen/padding_side"
            android:background="@drawable/bgbtnsignin"
            android:fontFamily="@font/mm"
            android:text="CHECK OUT"
            android:textColor="@android:color/white" />

    </LinearLayout>


</LinearLayout>