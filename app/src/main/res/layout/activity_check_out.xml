    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_side"
        android:layout_marginEnd="@dimen/padding_side"
        android:fontFamily="@font/mm"
        android:text="Delivery Method"
        android:textColor="@color/textColorPrimaryDark"
        android:textSize="15sp" />

            <RadioGroup
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/radioCurrent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="11dp"
                    android:buttonTint="@color/colorPrimaryDark"
                    android:fontFamily="@font/mr"
                    android:shadowColor="@color/colorPrimaryDark"
                    android:text="Current Location"
                    android:textColor="@color/textColorAccent"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/radioHome"
                    android:buttonTint="@color/colorPrimaryDark"
                    android:textSize="15sp"
                    android:textColor="@color/textColorAccent"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="11dp"
                    android:fontFamily="@font/mr"
                    android:text="My Address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_side"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="@dimen/padding_side"
            android:fontFamily="@font/mm"
            android:text="Address"
            android:textColor="@color/textColorPrimaryDark"
            android:textSize="15sp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false">

<!--            <EditText-->
<!--                android:id="@+id/check_out_delivery_address"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
