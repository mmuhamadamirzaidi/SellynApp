<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundApp"
    tools:context=".ForgetPasswordActivity">

    <LinearLayout
        android:id="@+id/sign_in_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="@dimen/padding_side"
            android:layout_marginTop="30dp"
            android:src="@drawable/logoprimary"
            app:civ_border_color="#ffffff"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/nameuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_side"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/mm"
            android:text="Forget Password?"
            android:textColor="@android:color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/walletuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_side"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/mr"
            android:text="Don't worry!"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_above="@+id/sign_in_bottom"
        android:layout_below="@+id/sign_in_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_side"
            android:layout_marginEnd="@dimen/padding_side"
            android:fontFamily="@font/mm"
            android:text="Phone"
            android:textColor="@color/textColorPrimaryDark"
            android:textSize="15sp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false">

            <EditText
                android:id="@+id/forget_password_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="13dp"
                android:fontFamily="@font/mr"
                android:hint="Insert your phone number"
                android:inputType="phone"
                android:textColor="@color/textColorAccent"
                android:textColorHint="@color/textColorAccent"
                android:textSize="15sp" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_side"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="@dimen/padding_side"
            android:fontFamily="@font/mm"
            android:text="Secure Code"
            android:textColor="@color/textColorPrimaryDark"
            android:textSize="15sp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false">

            <EditText
                android:id="@+id/forget_password_secure_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="13dp"
                android:fontFamily="@font/mr"
                android:hint="Insert your secure code"
                android:inputType="text"
                android:textColor="@color/textColorAccent"
                android:textColorHint="@color/textColorAccent"
                android:textSize="15sp" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/button_forget_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/padding_side"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="@dimen/padding_side"
            android:background="@drawable/bgbtnsignin"
            android:fontFamily="@font/mm"
            android:text="RETRIEVE PASSWORD"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sign_in_bottom"
        android:paddingBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mr"
                android:text="Get your password already?"
                android:textColor="@color/textColorAccent"
                android:textSize="15sp" />


        </LinearLayout>

        <Button
            android:id="@+id/button_account_sign_in"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/padding_side"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/padding_side"
            android:background="@drawable/bgbtncreate"
            android:fontFamily="@font/mm"
            android:text="SIGN IN NOW!"
            android:textColor="@color/textColorAccent" />

    </LinearLayout>


</RelativeLayout>